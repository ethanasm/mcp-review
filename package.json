{
  "name": "mcp-git-reviewer",
  "version": "0.1.0",
  "description": "Context-aware, AI-powered code review at the commit level using MCP",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "mcp-review": "./bin/mcp-review"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "check": "biome ci src tests",
    "typecheck": "tsc --noEmit",
    "verify": "bash scripts/verify.sh",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "code-review",
    "git",
    "ai",
    "claude",
    "cli"
  ],
  "author": "Ethan Smith",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "ora": "^8.0.1",
    "parse-diff": "^0.11.1",
    "simple-git": "^3.25.0",
    "yaml": "^2.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^20.14.0",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
